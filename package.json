{
  "name": "andela-politico",
  "version": "1.0.0",
  "description": "A system that lets user login and vote, view election results and registers as political candidates",
  "main": "app",
  "scripts": {
    "test": "mocha --require babel-core/register server/test/**/*.js --exit",
    "start": "npm run build && node ./dist/app.js",
    "clean": "rm -rf dist",
    "build": "babel server -s -d dist",
    "dev-start":"nodemon --exec babel-node ./server/app.js",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha test/*.js",
    "cover": "istanbul cover _mocha",
    "report": "nyc --reporter=html --reporter=text-lcov mocha --require babel-core/register ./server/test/ --exit | coveralls",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chiboycalix/andela-politico.git"
  },
  "author": "Igwe Abraham Chinonso",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chiboycalix/andela-politico/issues"
  },
  "homepage": "https://github.com/chiboycalix/andela-politico#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "istanbul": "^0.4.5",
    "jscover": "^1.0.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9"
  }
}
